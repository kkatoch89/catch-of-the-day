/*
  Possible Animations:
  enter
  exit
  appear Must set transitionAppear={true} on animation component
*/

// After the CSSTransition Timeout:{{enter: 250, exit: 250}} is finished, 
// these classes will be removed
.order-enter
  transform translateX(-120%)
  transition .5s
  max-height 0
  padding 0
  &.order-enter-active
    max-height 60px
    transform translateX(0)
    padding 2rem 0 !important

.order-exit
  transform translateX(0)
  transition .5s
  &.order-exit-active
    transform translateX(120%)
    padding 0

.count-enter
  // background red
  transition .5s
  transform translateY(100%)
  &.count-enter-active
    // background yellow
    transform translateY(0)

.count-exit 
  // background black
  transition .5s
  transform translateY(0)
  position absolute
  left 0
  bottom 0
  &.count-exit-active
    // background green
    transform translateY(-100%)